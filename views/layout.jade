doctype 5
html
	head
		title= title
		link(rel="shortcut icon", href="/images/crowdhub_icon.png")
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/nav.css')
		link(rel='stylesheet', href='/stylesheets/wrapper.css')
		link(rel='stylesheet', href='/stylesheets/footer.css')

	body
		#nav
			ol
				a(href="/")#li_logo
					li
						img(src='/images/crowdhub_logo.png', height=70, width=240)
				
				if(typeof username !== 'undefined')
					li
						a(href="/user/#{username}") Profile
				else
					li
						a(href="/users") Profile
					
				li
					a(href="/stories") Stories
				li	
					a(href="/signup") Sign Up
				li#search 
					form(method="get", action="/search_results") 
						input(type="text", id="searchBox", name="query", placeholder="Search a user")
				li#newStory
					a(href="/new") New Story
		#nav2
			ol
				include userbar
				
				
		
		#wrapper

			#container
				br
				#main_content
					block mainContent
					
				#side_content
					#sidebar
						#profile_update
							h1 Profile Update
								p
									| : No profile to update.
						#recent_items
							h1 Recent Quotes
								p
									| : No recent Stories.
				br
		#footer
			#footer_content
				div(style="padding: 5px;") Copyright &copy; crowdhub #{+new Date().getFullYear()} 
				#footer_links
					a(href='/page?name=about') About 
					| |  
					a(href='/page?name=contact') Contact Us 
					| |  
					a(href='https://github.com/jawerty/crowdhub') GitHub 
					| | 
					a(href='/page?name=blog') Blog 
					br
					br
